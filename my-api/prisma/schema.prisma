generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  // url      = env("DATABASE_URL")
}

model Cartlines {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  quantity  Int
  createdAt DateTime @default(now())

  @@map("cartlines")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("users")
}

model Poster {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String
  image       String
  width       Int
  height      Int
  price       Decimal  @db.Decimal(10, 2)
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  genreRels genrePosterRels[]

  @@map("posters")
}

model userRatings {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  numStars  Int
  createdAt DateTime @default(now())

  @@map("user_ratings")
}

model Genres {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posters genrePosterRels[]

  @@map("genres")
}

model genrePosterRels {
  genreId  Int
  posterId Int

  genre  Genres @relation(fields: [genreId], references: [id])
  poster Poster @relation(fields: [posterId], references: [id])

  @@id([genreId, posterId])
  @@map("genre_poster_rels")
}
